        "thumbnails": [],
        "label": "Image"
      }
    },
    "caption": {
      "type": "StructuredText",
      "config": {
        "multi": "paragraph, strong, em, hyperlink",
        "allowTargetBlank": true,
        "label": "Caption",
        "placeholder": "Image Caption"
      }
